<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.lenovo.watchinglist">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".WatchingNow"
            android:label="Watching Now" />
        <activity
            android:name=".Watched"
            android:label="Watched" />
        <activity
            android:name=".NeedToWatch"
            android:label="Need to Watch" />
        <activity android:name=".addNewMovie"
            android:theme="@style/Animation.AppCompat.Dialog"
            android:label="Add new Item"></activity>
    </application>

</manifest>